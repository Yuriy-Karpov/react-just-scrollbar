{
  "name": "react-just-scrollbar",
  "version": "0.1.1",
  "description": "just custom native scrollbar",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typescript": {
    "main": "./src/index.ts"
  },
  "scripts": {
    "dev": "npm run ts:watch & npm run css:watch",
    "ts:watch": "tsc -w -d",
    "compile": "tsc -d",
    "css": "node-sass -r src/ -o dist",
    "css:watch": "npm run css -- -w",
    "css:compress": "npm run css -- --output-style compressed",
    "copy-sources": "copyfiles -f *.css ./dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Yuriy-Karpov/react-just-scrollbar.git"
  },
  "keywords": [
    "scroll",
    "scrollbar"
  ],
  "author": "karpov.y.al",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Yuriy-Karpov/react-just-scrollbar/issues"
  },
  "homepage": "https://github.com/Yuriy-Karpov/react-just-scrollbar#readme",
  "dependencies": {},
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "*"
  },
  "devDependencies": {
    "@types/react": "16.9.19",
    "node-sass": "^4.14.1",
    "tslint": "5.18.0",
    "typescript": "3.4.5"
  }
}
